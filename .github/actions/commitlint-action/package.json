{
  "name": "commitlint-action",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "src:all": "rm -rf lib/ && tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "dist:all": "npm run dist:build && npm run dist:copy_assets",
    "dist:build": "rm -rf dist/ && ncc build --license licenses.txt",
    "dist:copy_assets": "cp node_modules/@commitlint/config-validator/lib/commitlint.schema.json dist/commitlint.schema.json",
    "all": "npm run src:all && npm run format && npm run lint && npm run dist:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@commitlint/lint": "^19.2.2",
    "@commitlint/load": "^19.2.0",
    "@commitlint/format":  "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/config-validator": "^19.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-prettier": "5.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.2",
    "typescript": "^5.5.2"
  }
}
