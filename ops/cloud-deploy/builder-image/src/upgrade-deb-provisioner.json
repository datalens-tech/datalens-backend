{
    "type": "shell",
    "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "DEBIAN_PRIORITY=critical",
        "UPGRADE_DEB_PACKAGES={{user `upgrade_deb_packages`}}\""
    ],
    "inline": [
      "set -x",
      "echo 'Upgrading deb packages'",
      "sudo -E apt-get -qy update",
      "sudo -E apt-mark hold cloud-guest-utils cloud-init",
      "sudo -E apt-get -o \"Dpkg::Options::=--force-confdef\" -o Dpkg::Options::=\"--force-confold\" --fix-missing -qy upgrade",
      "sudo -E apt-mark unhold cloud-guest-utils cloud-init",
      "sudo -E apt-get -qy clean"
    ]
}
