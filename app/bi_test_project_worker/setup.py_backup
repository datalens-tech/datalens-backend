setup(
    name="bi-test-project-worker",
    version=__version__,
    author="Max Zuev",
    author_email="thenno@yandex-team.ru",
    packages=find_packages(".", exclude=["tests*"]),
    zip_safe=False,
    include_package_data=True,
    entry_points={},
    install_requires=[
        # global packages
        "attrs>=19.2.0",
        "arq>=0.25.0",
    ] + [
        f"{name} @ file://localhost/{BACKEND_ROOT_DIR}/lib/{pydir}"
        for name, pydir in (
            ("bi-task-processor", "bi_task_processor"),
            ("bi-test-project-task-interface", "bi_test_project_task_interface"),
