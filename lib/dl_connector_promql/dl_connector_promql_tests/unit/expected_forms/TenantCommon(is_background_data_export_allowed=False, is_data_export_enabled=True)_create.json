{
    "title": "Prometheus",
    "rows": [
        {
            "items": [
                {
                    "id": "label",
                    "text": "Authentication type"
                },
                {
                    "id": "radio_button",
                    "name": "auth_type",
                    "defaultValue": "password",
                    "options": [
                        {
                            "text": "Password",
                            "value": "password"
                        },
                        {
                            "text": "Header",
                            "value": "header"
                        }
                    ]
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "text": "Hostname"
                },
                {
                    "id": "input",
                    "name": "host",
                    "width": "l",
                    "controlProps": {
                        "type": "text"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "text": "Port"
                },
                {
                    "id": "input",
                    "name": "port",
                    "width": "s",
                    "controlProps": {
                        "type": "number"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "text": "URL path"
                },
                {
                    "id": "input",
                    "name": "path",
                    "width": "l",
                    "controlProps": {
                        "type": "text"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "auth_type": "password"
                    },
                    "text": "Username"
                },
                {
                    "id": "input",
                    "name": "username",
                    "displayConditions": {
                        "auth_type": "password"
                    },
                    "width": "m"
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "auth_type": "password"
                    },
                    "text": "Password"
                },
                {
                    "id": "input",
                    "name": "password",
                    "displayConditions": {
                        "auth_type": "password"
                    },
                    "defaultValue": "",
                    "width": "m",
                    "controlProps": {
                        "type": "password"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "auth_type": "header"
                    },
                    "text": "Header Authorization"
                },
                {
                    "id": "input",
                    "name": "auth_header",
                    "displayConditions": {
                        "auth_type": "header"
                    },
                    "defaultValue": "",
                    "width": "l",
                    "controlProps": {
                        "type": "password"
                    }
                }
            ]
        },
        {
            "type": "cache_ttl_sec",
            "name": "cache_ttl_sec"
        },
        {
            "items": [
                {
                    "id": "checkbox",
                    "name": "secure",
                    "defaultValue": true,
                    "text": "HTTPS"
                }
            ]
        },
        {
            "type": "collapse",
            "name": "advanced_settings",
            "inner": true,
            "text": "Advanced connection settings"
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "text": "Disable data export",
                    "helpText": "Disabling data export will hide the data export button in the charts, though you will still be able to extract data from charts and take screenshots."
                },
                {
                    "id": "radio_button",
                    "name": "data_export_forbidden",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "defaultValue": "off",
                    "options": [
                        {
                            "text": "Off",
                            "value": "off"
                        },
                        {
                            "text": "On",
                            "value": "on"
                        }
                    ]
                }
            ]
        },
        {
            "items": [
                {
                    "id": "hidden",
                    "name": "description",
                    "defaultValue": ""
                }
            ]
        }
    ],
    "apiSchema": {
        "create": {
            "items": [
                {
                    "name": "auth_type",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "host",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "port",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "path",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "username",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "password",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "auth_header",
                    "required": true,
                    "defaultAction": "skip"
                },
                {
                    "name": "cache_ttl_sec",
                    "required": false,
                    "nullable": true,
                    "defaultAction": "include"
                },
                {
                    "name": "secure",
                    "type": "boolean",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "data_export_forbidden",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "type",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "nullable": false,
                    "defaultAction": "include"
                }
            ],
            "conditions": [
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "password",
                    "then": [
                        {
                            "selector": {
                                "name": "username"
                            },
                            "action": "include"
                        },
                        {
                            "selector": {
                                "name": "password"
                            },
                            "action": "include"
                        }
                    ]
                },
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "header",
                    "then": [
                        {
                            "selector": {
                                "name": "auth_header"
                            },
                            "action": "include"
                        }
                    ]
                }
            ]
        },
        "check": {
            "items": [
                {
                    "name": "auth_type",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "host",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "port",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "path",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "username",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "password",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "auth_header",
                    "required": true,
                    "defaultAction": "skip"
                },
                {
                    "name": "secure",
                    "type": "boolean",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "type",
                    "required": false,
                    "defaultAction": "include"
                }
            ],
            "conditions": [
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "password",
                    "then": [
                        {
                            "selector": {
                                "name": "username"
                            },
                            "action": "include"
                        },
                        {
                            "selector": {
                                "name": "password"
                            },
                            "action": "include"
                        }
                    ]
                },
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "header",
                    "then": [
                        {
                            "selector": {
                                "name": "auth_header"
                            },
                            "action": "include"
                        }
                    ]
                }
            ]
        }
    },
    "uiSchema": {
        "showCreateDatasetButton": false,
        "showCreateQlChartButton": true
    }
}