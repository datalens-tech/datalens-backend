{
    "title": "Trino",
    "rows": [
        {
            "items": [
                {
                    "id": "label",
                    "text": "Authentication type"
                },
                {
                    "id": "radio_button",
                    "name": "auth_type",
                    "defaultValue": "password",
                    "options": [
                        {
                            "text": "No auth",
                            "value": "none"
                        },
                        {
                            "text": "Password",
                            "value": "password"
                        },
                        {
                            "text": "JWT",
                            "value": "jwt"
                        }
                    ]
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "text": "Hostname"
                },
                {
                    "id": "input",
                    "name": "host",
                    "width": "l"
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "text": "Port"
                },
                {
                    "id": "input",
                    "name": "port",
                    "defaultValue": "8443",
                    "width": "s",
                    "controlProps": {
                        "type": "number"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "text": "Username"
                },
                {
                    "id": "input",
                    "name": "username",
                    "width": "m"
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "auth_type": "password"
                    },
                    "text": "Password"
                },
                {
                    "id": "input",
                    "name": "password",
                    "displayConditions": {
                        "auth_type": "password"
                    },
                    "width": "m",
                    "fakeValue": "******",
                    "controlProps": {
                        "type": "password"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "auth_type": "jwt"
                    },
                    "text": "JWT"
                },
                {
                    "id": "input",
                    "name": "jwt",
                    "displayConditions": {
                        "auth_type": "jwt"
                    },
                    "width": "l",
                    "fakeValue": "******",
                    "controlProps": {
                        "type": "password"
                    }
                }
            ]
        },
        {
            "type": "cache_ttl_sec",
            "name": "cache_ttl_sec"
        },
        {
            "type": "raw_sql_level",
            "name": "raw_sql_level",
            "defaultValue": "off",
            "switchOffValue": "off",
            "label": {
                "id": "label",
                "text": "Raw SQL level",
                "align": "start",
                "helpText": "- We do not recommend combining subqueries in datasets with RLS or restrictions on viewing tables.\n- SQL queries from charts enter the connection directly and do not take into account the RLS configured in the datasets."
            },
            "radioGroup": {
                "id": "radio_group",
                "name": "raw_sql_level",
                "options": [
                    {
                        "content": {
                            "text": "Allow subselects in datasets",
                            "hintText": "This option allows you to describe dataset sources using SQL queries"
                        },
                        "value": "subselect"
                    },
                    {
                        "content": {
                            "text": "Allow subselects in datasets and QL-charts",
                            "hintText": "This option allows you to describe dataset sources using SQL queries and create QL charts",
                            "textEndIcon": {
                                "name": "CircleExclamation",
                                "view": "error"
                            }
                        },
                        "value": "dashsql"
                    }
                ]
            }
        },
        {
            "type": "collapse",
            "name": "advanced_settings",
            "inner": true,
            "text": "Advanced connection settings"
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "text": "TLS",
                    "helpText": "When this option is enabled, connections to Trino use the HTTPS protocol; when disabled - HTTP."
                },
                {
                    "id": "radio_button",
                    "name": "ssl_enable",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "defaultValue": "on",
                    "options": [
                        {
                            "text": "Off",
                            "value": "off"
                        },
                        {
                            "text": "On",
                            "value": "on"
                        }
                    ]
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "text": "CA Certificate"
                },
                {
                    "id": "file-input",
                    "name": "ssl_ca",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    }
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "text": "Disable data export",
                    "helpText": "Disabling data export will hide the data export button in the charts, though you will still be able to extract data from charts and take screenshots."
                },
                {
                    "id": "radio_button",
                    "name": "data_export_forbidden",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "defaultValue": "off",
                    "options": [
                        {
                            "text": "Off",
                            "value": "off"
                        },
                        {
                            "text": "On",
                            "value": "on"
                        }
                    ]
                }
            ]
        },
        {
            "items": [
                {
                    "id": "label",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "text": "Request table list",
                    "helpText": "Disable if loading the table list from the source takes too long or causes errors \u2014 in this case, add tables via SQL queries"
                },
                {
                    "id": "radio_button",
                    "name": "listing_tables",
                    "displayConditions": {
                        "advanced_settings": "opened"
                    },
                    "defaultValue": "on",
                    "options": [
                        {
                            "text": "Off",
                            "value": "off"
                        },
                        {
                            "text": "On",
                            "value": "on"
                        }
                    ]
                }
            ]
        }
    ],
    "apiSchema": {
        "edit": {
            "items": [
                {
                    "name": "auth_type",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "host",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "port",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "username",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "password",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "jwt",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "cache_ttl_sec",
                    "required": false,
                    "nullable": true,
                    "defaultAction": "include"
                },
                {
                    "name": "raw_sql_level",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "data_export_forbidden",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "listing_tables",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "ssl_enable",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "ssl_ca",
                    "required": false,
                    "defaultAction": "include"
                }
            ],
            "conditions": [
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "password",
                    "then": [
                        {
                            "selector": {
                                "name": "password"
                            },
                            "action": "include"
                        }
                    ]
                },
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "jwt",
                    "then": [
                        {
                            "selector": {
                                "name": "jwt"
                            },
                            "action": "include"
                        }
                    ]
                }
            ]
        },
        "check": {
            "items": [
                {
                    "name": "auth_type",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "host",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "port",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "username",
                    "required": true,
                    "defaultAction": "include"
                },
                {
                    "name": "password",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "jwt",
                    "required": false,
                    "defaultAction": "skip"
                },
                {
                    "name": "cache_ttl_sec",
                    "required": false,
                    "nullable": true,
                    "defaultAction": "include"
                },
                {
                    "name": "raw_sql_level",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "data_export_forbidden",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "listing_tables",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "ssl_enable",
                    "required": false,
                    "defaultAction": "include"
                },
                {
                    "name": "ssl_ca",
                    "required": false,
                    "defaultAction": "include"
                }
            ],
            "conditions": [
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "password",
                    "then": [
                        {
                            "selector": {
                                "name": "password"
                            },
                            "action": "include"
                        }
                    ]
                },
                {
                    "when": {
                        "name": "auth_type"
                    },
                    "equals": "jwt",
                    "then": [
                        {
                            "selector": {
                                "name": "jwt"
                            },
                            "action": "include"
                        }
                    ]
                }
            ]
        }
    }
}