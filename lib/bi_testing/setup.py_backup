#!/usr/bin/env python3
from __future__ import annotations

import os

from setuptools import setup, find_packages

PKG_DIR = os.path.dirname(os.path.abspath(__file__))
BACKEND_ROOT_DIR = os.path.dirname(os.path.dirname(PKG_DIR)).strip("/")
SETUP_KWARGS = dict(
    name="yandex-bi-testing",
    author="Konstantin Chupin",
    author_email="kchupin@yandex-team.ru",
    packages=find_packages(exclude=["tests*"]),
    zip_safe=False,

    include_package_data=True,
    package_data={
        "*": [
            "py.typed",
        ],
    },
    entry_points={
        'env_param_getters': [
            'direct=bi_testing.env_params.main:DirectEnvParamGetter',
            'osenv=bi_testing.env_params.main:OsEnvParamGetter',
        ],
    },
    install_requires=[
        # global packages
        "aiobotocore",
        "aiodns",
        "aiohttp>=3.5",
        "attrs>=19.2.0",
        "ciso8601",
        "marshmallow",
        "marshmallow-enum",
        "marshmallow-oneofschema",
        "pyjwt",
        # yandex:
        "certifi-yandex",
        "yandex-passport-vault-client",
    ] + [
        f"{name} @ file://localhost/{BACKEND_ROOT_DIR}/lib/{pydir}"
        for name, pydir in (
            ("yandex-bi-configs", "bi_configs"),
            ("yandex-bi-cloud-integration", "bi_cloud_integration"),
        )
        if os.path.exists(f"/{BACKEND_ROOT_DIR}/lib/{pydir}")
    ],
    extras_require={},
)
SETUP_KWARGS["extras_require"]["all"] = sorted(set(
    pkg for lst in SETUP_KWARGS["extras_require"].values() for pkg in lst
))


if __name__ == "__main__":
    setup(**SETUP_KWARGS)
