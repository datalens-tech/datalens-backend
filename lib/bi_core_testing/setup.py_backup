#!/usr/bin/env python3

from __future__ import annotations

import os
from setuptools import setup, find_packages


PKG_DIR = os.path.dirname(os.path.abspath(__file__))
BACKEND_ROOT_DIR = os.path.dirname(os.path.dirname(PKG_DIR)).strip("/")
SETUP_KWARGS = dict(
    name="yandex-bi-core-testing",
    author="Bi Package Author",
    author_email="bipackageauthor@yandex-team.ru",
    packages=find_packages(exclude=["bi_core_testing_tests*"]),
    zip_safe=False,

    include_package_data=True,
    package_data={
        "*": [
            "py.typed",
        ],
    },
    entry_points={
        "bi_core.connectors": [
            "testing=bi_core_testing.connector:TestingCoreConnector",
        ]
    },
    install_requires=[
        # External packages
        'aiohttp>=3.5',
        'attrs',
        'docker',
        'Flask',
        'marshmallow',
        'psycopg2-binary',  # FIXME: Remove from testing (waiting for US PG)
        'pytest',
        'uwsgi',
        'requests',
        'shortuuid',
        'sqlalchemy>=1.2',
        'Werkzeug',
    ] + [
        f"{name} @ file://localhost/{BACKEND_ROOT_DIR}/lib/{pydir}"
        for name, pydir in (
            # bi packages go here
            ("yandex-bi-api-commons", "bi_api_commons"),
            ("yandex-bi-app-tools", "bi_app_tools"),
            ("yandex-bi-configs", "bi_configs"),
            ("yandex-bi-constants", "bi_constants"),
            ("yandex-bi-core", "bi_core"),
            ("yandex-bi-db-testing", "bi_db_testing"),
            ("yandex-bi-utils", "bi_utils"),
            ("statcommons", "statcommons"),
        )
        if os.path.exists(f"/{BACKEND_ROOT_DIR}/lib/{pydir}")
    ],
    extras_require={},
)
SETUP_KWARGS["extras_require"]["all"] = sorted(set(
    pkg for lst in SETUP_KWARGS["extras_require"].values() for pkg in lst
))


if __name__ == "__main__":
    setup(**SETUP_KWARGS)
